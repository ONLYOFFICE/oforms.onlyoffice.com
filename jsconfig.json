{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@public/*": [
                "public/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ],
            "@common/*": [
                "./src/common/*"
            ],
            "@icons": [
                "./src/icons/index.js"
            ],
            "@illustrations": [
                "./src/illustrations/index.js"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}